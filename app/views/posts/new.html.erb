<% if @post.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>    
  </div>
<% end %>


<%= form_with model: @post, url: posts_path do |form| %>
  <%= form.label :title, "Title" %>
  <%= form.text_field :title %><br><br>
  <%= form.label :body, "Body" %>
  <%= form.text_area :body %>
  <%= form.submit "Create" %>
<% end %>
